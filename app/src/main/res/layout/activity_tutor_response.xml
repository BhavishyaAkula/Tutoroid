<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".TutorResponseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:text="From"
        android:textColor="#0091EA"
        android:textSize="18sp"
        android:padding="5dp"/>
        <TextView
            android:id="@+id/frorespond"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" from"
            android:textSize="16sp"
            android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:text="To"
        android:padding="5dp"
        android:textColor="#C2185B"/>
    <TextView
        android:id="@+id/to"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="to"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:padding="5dp"
            android:textColor="#C2185B"/>
        <TextView
            android:id="@+id/mobilenum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="778998545"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Email"
            android:padding="5dp"
            android:textColor="#C2185B"/>
        <TextView
            android:id="@+id/emailed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="to@gmail.com"/>
    </LinearLayout>


    <TextView
        android:id="@+id/frodesrespond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="18sp"
        android:textColor="#FF8A65"
        android:padding="5dp"/>
    <EditText
        android:id="@+id/resmsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="reponse message"
        android:textSize="16sp"/>


    <Button
        android:id="@+id/resp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respond"
        android:background="#00BFA5"
        android:textColor="#FFF"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:id="@+id/l_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_message_black_24dp" />

        <ImageView
            android:id="@+id/cal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_phone_in_talk_black_24dp" />

        <ImageView
            android:id="@+id/emal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_email_black_24dp" />

    </LinearLayout>

</LinearLayout>
</ScrollView>